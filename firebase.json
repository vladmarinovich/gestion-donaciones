{
  "firestore": {
    "database": "(default)",
    "location": "nam5",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    // Para SPAs, redirige todas las URLs que no son archivos al index.html
    "rewrites": [
      {
        "source": "!{/js/**,/css/**,/assets/**,/components/**,**/*.html,**/*.png,**/*.svg,**/*.ico}",
        "destination": "/index.html" 
      }
    ]
  }
}